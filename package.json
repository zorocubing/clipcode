{
  "name": "clip-code",
  "displayName": "Clip Code",
  "publisher": "zorocubing",
  "description": "Clip Code is a VS Code extension pulls your local Ollama models and use them to copilot your coding session without leaving the editor.",
  "icon": "clipcode_logo.png",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.103.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zorocubing/clipcode.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "type": "module",
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "clipcode.start",
        "title": "Chat with Clip Code"
      },
      {
        "command": "clipcode.startNewChat",
        "title": "Start New Chat",
        "icon": {
          "light": "add_light.svg",
          "dark": "add_dark.svg"
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "clipcode",
          "title": "Clip Code",
          "icon": "clipcode.svg"
        }
      ]
    },
    "views": {
      "clipcode": [
        {
          "type": "webview",
          "icon": "clipcode.svg",
          "id": "clipcodeView",
          "name": ""
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "clipcode.startNewChat",
          "when": "view == clipcodeView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "ollama": "^0.5.17"
  }
}